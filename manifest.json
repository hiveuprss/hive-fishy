{
  "manifest_version": 2,
  "name": "Hive Fishy",
  "version": "0.0.0.1",
  "description": "A browser extension to show account levels for Hive frontends.",

  "icons": { "128": "assets/hive.png" },

  "browser_action": {
    "default_title": "Hive Fishy",
    "default_popup": "popup.html",
    "default_icon": {         
      "16": "assets/hive16.png",
      "24": "assets/hive24.png",
      "32": "assets/hive32.png" 
    }
  },

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "permissions": [
    "webNavigation"
  ]
}
